# Environment Configuration for Colosseum
# Copy this file to .env and configure your settings

# ==============================================
# SERVER CONFIGURATION
# ==============================================
PORT=7777
HOST=0.0.0.0
NODE_ENV=development

# ==============================================
# X402 PAYMENT PROTOCOL CONFIGURATION
# ==============================================
PAYMENT_PROTOCOL_ENABLED=true

# ⚠️  FOR LIVE STREAM: USE REAL SOLANA MAINNET WALLET
# Replace with your actual Solana wallet address to receive REAL USDC
PAYMENT_RECIPIENT_ADDRESS=YourActualSolanaWalletAddressHere

# ⚠️  CRITICAL: SET TO FALSE FOR REAL MONEY TRANSACTIONS
# Only set to true for testing - MUST BE FALSE for live stream
MOCK_PAYMENTS=false

# ==============================================
# BLOCKCHAIN RPC CONFIGURATION
# ==============================================
# Get free API keys from Alchemy, Infura, or QuickNode

# Ethereum Mainnet
ETHEREUM_RPC_URL=https://eth-mainnet.g.alchemy.com/v2/your-api-key

# Polygon Mainnet  
POLYGON_RPC_URL=https://polygon-mainnet.g.alchemy.com/v2/your-api-key

# Base Mainnet (Recommended for lowest fees)
BASE_RPC_URL=https://base-mainnet.g.alchemy.com/v2/your-api-key

# Arbitrum Mainnet
ARBITRUM_RPC_URL=https://arb-mainnet.g.alchemy.com/v2/your-api-key

# ⚠️  SOLANA MAINNET - REAL MONEY TRANSACTIONS
# This connects to Solana mainnet for REAL USDC transactions
# All transactions will be visible on https://solscan.io
SOLANA_RPC_URL=https://api.mainnet-beta.solana.com

# ==============================================
# LLM API KEYS
# ==============================================
# OpenAI API Key (for GPT models)
OPENAI_API_KEY=sk-your-openai-api-key

# Anthropic API Key (for Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# Google AI API Key (for Gemini models)
GOOGLE_AI_API_KEY=your-google-ai-api-key

# Hugging Face API Key (for open source models)
HUGGINGFACE_API_KEY=hf_your-huggingface-api-key

# ==============================================
# COLOSSEUM CONFIGURATION
# ==============================================
# Maximum number of concurrent games
MAX_CONCURRENT_GAMES=100

# Minimum and maximum stakes (in USDC)
MIN_STAKES=0.01
MAX_STAKES=100.0

# Game timeout (minutes)
GAME_TIMEOUT_MINUTES=10

# Payment timeout (minutes)
PAYMENT_TIMEOUT_MINUTES=15

# ==============================================
# LOGGING CONFIGURATION
# ==============================================
LOG_LEVEL=info
LOG_FILE=colosseum.log

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
COLOSSEUM_API_KEY=your-secure-api-key-here
CORS_ORIGINS=http://localhost:3000,http://localhost:7777

# ==============================================
# DEMO CONFIGURATION
# ==============================================
# ⚠️  FOR LIVE STREAM: SET TO FALSE FOR REAL AI AGENTS
# Demo mode creates fake agents - set to false for real LLM gambling
DEMO_MODE=false
DEMO_AGENT_COUNT=4